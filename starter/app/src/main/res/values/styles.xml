<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginLabel">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="NewShoeLabel" parent="LoginLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NewShoeEditText" parent="NewShoeLabel">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:layout_marginTop">@dimen/new_shoe_edit_text_margin_top</item>
        <item name="android:ems">10</item>
    </style>

    <style name="NewShoeButton" parent="LoginButton">
    </style>

    <style name="LoginEditText" parent="LoginLabel">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:layout_marginTop">@dimen/login_edit_text_margin_top</item>
    </style>

    <style name="LoginButton">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@color/colorAccentLight</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="NextButton" parent="LoginButton">
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="OnboardingHeader">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/onboarding_header_text_size</item>
    </style>

    <style name="OnboardingMessage">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/onboarding_message_text_size</item>
    </style>

</resources>
